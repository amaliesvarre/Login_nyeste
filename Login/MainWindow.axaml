<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        x:Class="Login.MainWindow"
        mc:Ignorable="d"
        d:DesignWidth="1000"
        d:DesignHeight="700"
        d:DataContext="{d:DesignInstance Type=local:MainWindow, IsDesignTimeCreatable=True}"
        x:CompileBindings="False"
        Title="SystemLogin">

    <!-- ===== Styles ===== -->
    <Window.Styles>
        <Style Selector="TextBox, Button, CheckBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Styles>

    <!-- ===== Layout ===== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===== Tabs ===== -->
        <TabControl Grid.Row="0" Name="MainTabControl">

            <!-- LOGIN -->
            <TabItem Header="ðŸ”‘ Login">
                <StackPanel Margin="20" Spacing="20">
                    <TextBlock Text="Login" FontWeight="Bold" FontSize="16"/>
                    <TextBox Name="LoginUsername" Watermark="Username"/>
                    <TextBox Name="LoginPassword" Watermark="Password" PasswordChar="â—"/>
                    <Button Content="Login"
                            Width="160"
                            Click="LoginButton_OnClick"/>

                    <Separator/>

                    <TextBlock Text="Create user" FontWeight="Bold" FontSize="16"/>
                    <TextBox Name="CreateUserUsername" Watermark="Username"/>
                    <TextBox Name="CreateUserPassword" Watermark="Password" PasswordChar="â—"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Is admin"/>
                        <CheckBox Name="CreateUserIsAdmin"/>
                    </StackPanel>

                    <Button Content="Recreate default database"
                            Width="260"
                            Click="RecreateDatabaseButton_OnClick"/>
                </StackPanel>
            </TabItem>

            <!-- ADMIN -->
            <TabItem Header="ðŸ¦¾ Admin">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Previous orders" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Order ID" FontWeight="Bold"/>
                        <TextBlock Text="Date" Grid.Column="1" FontWeight="Bold"/>
                        <TextBlock Text="Quantity" Grid.Column="2" FontWeight="Bold"/>
                    </Grid>

                    <ItemsControl Grid.Row="2" ItemsSource="{Binding PreviousOrders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding OrderId}"/>
                                    <TextBlock Text="{Binding CreatedAt}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding TotalQuantity}" Grid.Column="2"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Grid.Row="3"
                            Content="Place new order"
                            Width="240"
                            Height="56"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0"
                            Foreground="White"
                            Click="OnPlaceOrderClick"/>
                </Grid>
            </TabItem>

<!-- DATABASE -->
            <TabItem Header="ðŸ›¢ Database">
    <DockPanel Margin="20">

        <!-- CONFIRM BUTTON OUTSIDE GRID (aligned right) -->
        <Button Content="Confirm order completed"
                DockPanel.Dock="Bottom"
                HorizontalAlignment="Right"
                Margin="0,20,0,0"
                Width="200"
                Height="32"
                Background="Green"
                Foreground="White"/>

        <!-- MAIN GRID LAYOUT -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- ORDER HEADER -->
            <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                     Text="Order"
                     FontSize="17"
                     TextAlignment="Center"
                     Background="#FF120F75"
                     Foreground="White"
                     Height="32"
                     Width="350"
                     HorizontalAlignment="Center"
                     Margin="0,10"/>

            <!-- COLUMN HEADERS -->
            <TextBox Grid.Row="1" Grid.Column="0"
                     Text="Quantity"
                     TextAlignment="Center"
                     FontWeight="Bold"
                     Foreground="#FF04006B"
                     Height="32"
                     Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="1"
                     Text="Component"
                     TextAlignment="Center"
                     FontWeight="Bold"
                     Foreground="#FF04006B"
                     Height="32"
                     Margin="0,5"/>

            <!-- DATA ROWS -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="0" TextAlignment="Center" FontSize="14" Height="24"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="Component A" TextAlignment="Center" FontSize="14" Height="24"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="0" TextAlignment="Center" FontSize="14" Height="24"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="Component B" TextAlignment="Center" FontSize="14" Height="24"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="0" TextAlignment="Center" FontSize="14" Height="24"/>
            <TextBlock Grid.Row="4" Grid.Column="1" Text="Component C" TextAlignment="Center" FontSize="14" Height="24"/>

            <!-- PROCESS BUTTON (aligned under Quantity column) -->
            <Button Content="Process order"
                    Name="MyButton"
                    Click="OnButtonClick"
                    Grid.Row="5" Grid.Column="0"
                    Width="140"
                    Height="32"
                    Background="#1E60FF"
                    Foreground="White"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Left"/>
        </Grid>
    </DockPanel>
</TabItem>


            <!-- CREATE ORDER -->
            <TabItem Header="ðŸ“ Create Order">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/> <!-- <- NY ROW FOR KNAPPEN -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- YOUR INFORMATION -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                        <TextBlock Text="Your information" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                        <StackPanel Name="UserInfoPanel" IsVisible="{Binding IsLoggedIn}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Admin ID #" Grid.Column="0"/>
                                <TextBlock Text="{Binding CurrentUserId}" Grid.Column="1"/>
                            </Grid>
                        </StackPanel>
                        <Button Name="LoginRedirectButton"
                                Content="Log ind her"
                                IsVisible="{Binding IsLoggedOut}"
                                Width="120"
                                Click="OnGoToLoginClick"/>
                    </StackPanel>

                    <!-- PRODUCTS -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                        <TextBlock Text="Products" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding AvailableProducts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Content="â–¼"
                                                Grid.Column="0"
                                                Command="{Binding DataContext.DecreaseQtyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />

                                        <Button Content="â–²"
                                                Grid.Column="1"
                                                Command="{Binding DataContext.IncreaseQtyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />

                                        <TextBlock Grid.Column="2" Text="{Binding Quantity}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{Binding Name}" VerticalAlignment="Center"/>

                                        <Button Grid.Column="4"
                                                Content="Add to order ðŸ›’"
                                                Command="{Binding DataContext.AddToOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- ORDER LINES -->
                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
                        <TextBlock Text="Order" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding OrderLines}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Content="Delete âŒ"
                                                Command="{Binding DataContext.RemoveFromOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Quantity}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Name}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- PLACE ORDER BUTTON -->
                    <Button Grid.Row="3"
                            Grid.Column="1"
                            Content="Place order âœ…"
                            Width="180"
                            Height="40"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0"
                            Command="{Binding PlaceOrderCommand}"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- LOG OUTPUT -->
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,0,1" Background="DimGray" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Name="LogOutput" FontFamily="Consolas" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- BOTTOM -->
        <DockPanel Grid.Row="2" Margin="8">
            <Button Content="Clear log" DockPanel.Dock="Left" Click="ClearLogButton_OnClick"/>
            <Button Content="Logout" DockPanel.Dock="Right" Name="LogoutButton" IsVisible="False" Click="LogoutButton_OnClick"/>
        </DockPanel>
    </Grid>
</Window>
