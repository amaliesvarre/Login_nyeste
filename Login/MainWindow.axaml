<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        x:Class="Login.MainWindow"
        mc:Ignorable="d"
        d:DesignWidth="1000"
        d:DesignHeight="700"
        d:DataContext="{d:DesignInstance Type=local:MainWindow, IsDesignTimeCreatable=True}"
        x:CompileBindings="False"
        Title="SystemLogin">

    <!-- ===== Styles ===== -->
    <Window.Styles>
        <Style Selector="TextBox, Button, CheckBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Styles>

    <!-- ===== Layout (log) ===== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===== Tabs ===== -->
        <TabControl Grid.Row="0" Name="MainTabControl">

            <!-- LOGIN -->
            <TabItem Header="ðŸ”‘ Login">
                <StackPanel Margin="20" Spacing="20">
                    <!-- ===== Login sektion ===== -->
                    <TextBlock Text="Login" FontWeight="Bold" FontSize="16"/>
                    <TextBox Name="LoginUsername" Watermark="Username"/>
                    <TextBox Name="LoginPassword" Watermark="Password" PasswordChar="â—"/>
                    <Button Content="Login"
                            Width="160"
                            Click="LoginButton_OnClick"/>

                    <Separator/>

                    <!-- ===== Opret bruger sektion ===== -->
                    <TextBlock Text="Create user" FontWeight="Bold" FontSize="16"/>
                    <TextBox Name="CreateUserUsername" Watermark="Username"/>
                    <TextBox Name="CreateUserPassword" Watermark="Password" PasswordChar="â—"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Is admin"/>
                        <CheckBox Name="CreateUserIsAdmin"/>
                    </StackPanel>
                    <Button Content="Register"
                            Width="160"
                            Click="CreateUserButton_OnClick"/>
                </StackPanel>
            </TabItem>


            <!-- ADMIN -->
            <TabItem Header="ðŸ¦¾ Admin">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Previous orders"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,16"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Order ID" FontWeight="Bold"/>
                        <TextBlock Text="Date" Grid.Column="1" FontWeight="Bold"/>
                        <TextBlock Text="Quantity" Grid.Column="2" FontWeight="Bold"/>
                    </Grid>

                    <ItemsControl Grid.Row="2"
                                  ItemsSource="{Binding PreviousOrders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:OrderViewModel}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding OrderId}"/>
                                    <TextBlock Text="{Binding CreatedAt}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding TotalQuantity}" Grid.Column="2"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Grid.Row="3"
                            Content="Place new order"
                            Width="240"
                            Height="56"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0"
                            Foreground="White"
                            Click="OnPlaceOrderClick"/>
                </Grid>
            </TabItem>

            <!-- DATABASE -->
            <TabItem Header="ðŸ›¢ Database">
                <StackPanel Margin="20">
                    <Button Content="Recreate default database"
                            Width="260"
                            Click="RecreateDatabaseButton_OnClick"/>
                </StackPanel>
            </TabItem>

            <!-- CREATE ORDER -->
<!-- CREATE ORDER -->
<TabItem Header="ðŸ“ Create Order">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== YOUR INFORMATION ===== -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
            <TextBlock Text="Your information" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Admin ID #" />
                <TextBox Grid.Column="1" Text="{Binding CurrentUserId}" IsReadOnly="True"/>

                <TextBlock Grid.Row="1" Text="First name"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentUserFirstName}"/>

                <TextBlock Grid.Row="2" Text="Last name"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CurrentUserLastName}"/>
            </Grid>

<!-- ===== PRODUCTS ===== -->
<StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
    <TextBlock Text="Products" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
    
    <ItemsControl ItemsSource="{Binding AvailableProducts}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="â–²"
                            Command="{Binding DataContext.IncreaseQtyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Quantity}" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="{Binding Name}"/>
                    <Button Grid.Column="3" Content="Add to order ðŸ›’"
                            Command="{Binding DataContext.AddToOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"/>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</StackPanel>


<!-- ===== ORDER ===== -->
<StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
    <TextBlock Text="Order" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>

    <ItemsControl ItemsSource="{Binding OrderLines}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Delete âŒ"
                            Command="{Binding DataContext.RemoveFromOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Quantity}" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="{Binding Name}"/>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</StackPanel>

<!-- ===== ORDER ===== -->
<StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
    <TextBlock Text="Order" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>

    <ItemsControl ItemsSource="{Binding OrderLines}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Delete âŒ"
                            Command="{Binding DataContext.RemoveFromOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Quantity}" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="{Binding Name}"/>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</StackPanel></StackPanel></Grid></TabItem>

        </TabControl>

        <!-- LOG -->
        <Border Grid.Row="1"
                BorderBrush="Black"
                BorderThickness="0,1,0,1"
                Background="#F2F2F2"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Name="LogOutput"
                           FontFamily="Consolas"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- BOTTOM -->
        <DockPanel Grid.Row="2" Margin="8">
            <Button Content="Clear log"
                    DockPanel.Dock="Left"
                    Click="ClearLogButton_OnClick"/>
            <Button Content="Logout"
                    DockPanel.Dock="Right"
                    Name="LogoutButton"
                    IsVisible="False"
                    Click="LogoutButton_OnClick"/>
        </DockPanel>

    </Grid>
</Window>
